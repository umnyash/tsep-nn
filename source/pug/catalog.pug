extends layout/layout

block variables
  - var title = 'Каталог'
  - var pageClass = 'catalog-page'
  - var siteHeaderDarkTheme = true

block content
  +categories({links: categoriesNavigationLinks.slice(0, 4)})
  +products({heading: 'Легковые автомобили', products, listGrid: 1})
  +products({heading: 'Грузовые автомобили', products: products.concat(products, products), listGrid: 2})
  +products({heading: 'Тракторы и спец. техника', products: products.concat(products, products), listGrid: 3})
