mixin company-banner
  .banner&attributes(attributes)
    .banner__inner
      picture.banner__background(aria-hidden='true')
        source(media='(min-width: 1281px)' srcset='img/backgrounds/company-desktop.webp 1x, img/backgrounds/company-desktop@2x.webp 2x')
        source(media='(min-width: 421px)' srcset='img/backgrounds/company-laptop.webp 1x, img/backgrounds/company-laptop@2x.webp 2x')
        img.banner__background-image(src='img/backgrounds/company.webp' srcset='img/backgrounds/company@2x.webp 2x' alt='')
      h1.banner__heading.page-heading
        span.visually-hidden Наша продукция
        picture.page-heading__image-wrapper(aria-hidden='true')
          source(media='(min-width: 660px)' srcset='img/texts/ooo-tsep-nn.svg')
          img.page-heading__image(src='img/texts/ooo-tsep-nn-short.svg' alt='')
